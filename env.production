# ===========================================
# ATHENA POCKET - Producción
# ===========================================

# 🌐 Configuración General
NODE_ENV=production
VITE_APP_URL=https://athenapocket.com
VITE_API_URL=https://api.athenapocket.com
VITE_APP_NAME=Athena Pocket
VITE_APP_VERSION=1.0.0

# 🔐 Autenticación (Producción)
VITE_ADMIN_EMAIL=admin@athenapocket.com
VITE_ADMIN_PASSWORD=SECURE_PASSWORD_HERE

# 💳 Stripe (Producción)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_real_stripe_key
STRIPE_SECRET_KEY=sk_live_your_real_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_real_webhook_secret

# 💰 PayPal (Producción)
VITE_PAYPAL_CLIENT_ID=your_live_paypal_client_id
PAYPAL_CLIENT_SECRET=your_live_paypal_client_secret
PAYPAL_ENVIRONMENT=live
PAYPAL_WEBHOOK_ID=your_live_webhook_id

# 📧 Email (Producción)
SENDGRID_API_KEY=SG.your_real_sendgrid_key
FROM_EMAIL=noreply@athenapocket.com
FROM_NAME=Athena Pocket

# 🗄️ Base de Datos (Producción)
DATABASE_URL=postgresql://prod_user:secure_password@prod_host:5432/athena_pocket

# 🔒 Seguridad (Producción)
JWT_SECRET=super_secure_jwt_secret_64_characters_minimum
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=super_secure_encryption_key_32_characters
BCRYPT_ROUNDS=12

# 📊 Analytics (Producción)
VITE_GA_ID=G-YOUR_REAL_GA_ID

# ☁️ AWS S3 (Producción)
AWS_ACCESS_KEY_ID=your_prod_aws_access_key
AWS_SECRET_ACCESS_KEY=your_prod_aws_secret_key
AWS_REGION=eu-west-1
AWS_BUCKET_NAME=athena-pocket-prod

# 🚀 Redis (Producción)
REDIS_URL=redis://prod_redis_host:6379

# 🐛 Sentry (Producción)
VITE_SENTRY_DSN=https://your_real_sentry_dsn

# 🔒 CORS (Producción)
CORS_ORIGIN=https://athenapocket.com,https://www.athenapocket.com
